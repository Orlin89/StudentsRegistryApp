pipeline {
    agent any

    stages{
        stage('Checkout'){
            steps{
                git branch: 'main', url: 'https://github.com/Orlin89/StudentsRegistryApp'
            }
        }

        stage('Install dependencies'){
            bat 'npm install'
        }

        stage('Start application'){
            steps{
                script{
                    bat 'start /b npm start'
                }
            }
        }

        stage('Run tests'){
            steps{
                script{
                    bat 'npm test'
                }
            }
        }
    }

    post{
        always{
            echo "CI pipeline complited"
        }
    }
}